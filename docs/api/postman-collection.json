      "name": "搜索新闻 - regulatory",
      "request": {
        "method": "GET",
        "header": [],
        "url": {
          "raw": "{{baseUrl}}/news?q=regulatory&limit=10",
          "host": ["{{baseUrl}}"],
          "path": ["news"],
          "query": [
            {
              "key": "q",
